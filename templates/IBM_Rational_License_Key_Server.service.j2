[Unit]
Description = IBM Rational License Key Server
After = network.target network.service

[Service]
ExecStartPre = /bin/sleep 10
WorkingDirectory = {{ installation_location }}
ExecStart={{ installation_location }}/bin/lmgrd -local -c {{ installation_location }}/{{ license_location }}/{{ license_file }}:{{ installation_location }}/{{ license_location }}/rational_server_temp.dat:{{ installation_location }}/{{ license_location }}/rational_server_perm.dat -l {{ installation_location }}/logs/lmgrd.log
Type = forking
Restart = always
RestartSec = 30
TimeoutSec = 30
User = {{ service_user }}
Group = {{ service_group }}

[Install]
WantedBy = multi-user.target